{
  "name": "pointer-quest-web",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@react-three/drei": "^9.88.17",
    "@react-three/fiber": "^8.18.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/styled-components": "^5.1.34",
    "@types/three": "^0.160.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.26.2",
    "react-scripts": "5.0.1",
    "styled-components": "^6.1.19",
    "three": "^0.160.1",
    "typescript": "^4.9.5",
    "web-vitals": "^3.5.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:wasm": "bash -c 'source $HOME/.cargo/env && cd pointer-quest-wasm && wasm-pack build --target web --out-dir ../src/wasm'",
    "build:all": "npm run build:wasm && npm run build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "audit-fix": "npm audit fix",
    "security-check": "npm audit --audit-level=moderate",
    "audit:a11y": "node scripts/accessibility-audit.js",
    "audit:a11y:full": "node scripts/accessibility-audit.js --format all --screenshots",
    "audit:a11y:ci": "node scripts/accessibility-audit.js --format json --wcag-level AA",
    "test:a11y": "npm run audit:a11y",
    "test:a11y:watch": "nodemon --watch src --ext ts,tsx,js,jsx --exec \"npm run audit:a11y\""
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "axe-core": "^4.10.3",
    "jest-axe": "^10.0.0",
    "jest-canvas-mock": "^2.5.2",
    "lighthouse": "^12.8.1",
    "nodemon": "^3.1.10",
    "pa11y": "^9.0.0",
    "puppeteer": "^24.17.0",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
