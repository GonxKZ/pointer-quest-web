{
  "name": "Pointer Quest Web",
  "version": "1.0.0",
  "description": "Aplicación web educativa para aprender punteros en C++ con visualizaciones 3D y WebAssembly",

  "features": {
    "3d_visualization": true,
    "webassembly_engine": true,
    "progress_tracking": true,
    "responsive_design": true,
    "pwa_support": false
  },

  "engine": {
    "rust_version": "1.72",
    "react_version": "18.2.0",
    "threejs_version": "0.155.0",
    "typescript_version": "4.9.5"
  },

  "lessons": {
    "total": 120,
    "categories": [
      "Punteros Básicos",
      "Arrays y Tipos",
      "Smart Pointers",
      "Aliasing y Memory",
      "Contenedores",
      "Patrones Avanzados"
    ]
  },

  "performance": {
    "target_fps": 60,
    "max_pointers": 1000,
    "max_memory_blocks": 500,
    "wasm_memory_mb": 64
  },

  "visualization": {
    "default_camera_distance": 10,
    "isometric_angle": 30,
    "animation_speed": 1.0,
    "enable_shadows": true,
    "antialias": true
  }
}
